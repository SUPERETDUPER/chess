<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>

    <center>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="50" stylesheets="intro.css">

            <Text id="titre" text="Échec et Mat"/>

            <HBox alignment="CENTER" spacing="100">
                <VBox alignment="CENTER" spacing="20">
                    <Text styleClass="titreBlancNoir" text="Blanc"/>
                    <JFXComboBox/>
                </VBox>
                <VBox alignment="CENTER" spacing="20">
                    <Text styleClass="titreBlancNoir" text="Noir"/>
                    <JFXComboBox/>
                </VBox>
            </HBox>

            <JFXButton id="btnJouer" fx:id="jouer" text="Jouer!" onAction="#handleJouer"/>
        </VBox>
    </center>

    <bottom>
        <StackPane>
            <Text text="Écrit par Martin Staadecker pour son projet final du cours ICS4U (2018)"/>
        </StackPane>
    </bottom>
</BorderPane>
