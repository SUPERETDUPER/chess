<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" stylesheets="intro.css"
            id="root">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>

    <center>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="50">

            <Text id="title" text="Chess"/>

            <HBox alignment="CENTER" spacing="100">
                <VBox alignment="CENTER" spacing="20" fx:id="whitePlayerContainer">
                    <Text styleClass="whiteBlackTitle" text="White"/>
                </VBox>
                <VBox alignment="CENTER" spacing="20" fx:id="blackPlayerContainer">
                    <Text styleClass="whiteBlackTitle" text="Black"/>
                </VBox>
            </HBox>

            <JFXButton id="startBtn" text="New Game!" onAction="#handleStart"/>
        </VBox>
    </center>

    <bottom>
        <StackPane>
            <Text text="Created by Martin Staadecker for his final project in his ICS4U course (2018)"/>
        </StackPane>
    </bottom>
</BorderPane>
